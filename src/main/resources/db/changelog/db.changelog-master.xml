<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="Create Flight search table" author="Akhtar">
        <createSequence cycle="true" incrementBy="1"
                        sequenceName="FLIGHT_ID_SEQ" startValue="1"/>
        <createTable tableName="FLIGHTS">
            <column name="ID" type="NUMBER(19)" defaultValueSequenceNext="FLIGHT_ID_SEQ">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="FLIGHT_NUMBER" type="VARCHAR2(10)">
                <constraints nullable="false"/>
            </column>
            <column name="ORIGIN" type="VARCHAR2(200)">
                <constraints nullable="false"/>
            </column>
            <column name="DESTINATION" type="VARCHAR2(200)">
                <constraints nullable="false"/>
            </column>
            <column name="DEPARTURE_TIME" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="ARRIVAL_TIME" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="PRICE" type="VARCHAR2(10)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="Create index for origin and destination search" author="Akhtar">
        <createIndex indexName="ORIGIN_DESTINATION_INDEX" tableName="FLIGHTS">
            <column name="ORIGIN"/>
            <column name="DESTINATION" />
        </createIndex>
    </changeSet>

    <changeSet id="Load Flight plan data" author="Akhtar">
        <loadData tableName="FLIGHTS" file="static/csv/flight_plan.csv" >
            <column name="FLIGHT_NUMBER" header="FLIGHT_NUMBER" />
            <column name="ORIGIN" header="ORIGIN" />
            <column name="DESTINATION" header="DESTINATION" />
            <column name="DEPARTURE_TIME" header="DEPARTURE_TIME" type="TIME 'HH:MI'" />
            <column name="ARRIVAL_TIME" header="ARRIVAL_TIME" type="TIME 'HH:MI'" />
            <column name="PRICE" header="PRICE" />
        </loadData>
    </changeSet>

    <changeSet id="Create Airports table" author="Akhtar">
        <createSequence cycle="true" incrementBy="1"
                        sequenceName="AIRPORT_ID_SEQ" startValue="1"/>
        <createTable tableName="AIRPORTS">
            <column name="ID" type="NUMBER(19)" defaultValueSequenceNext="AIRPORT_ID_SEQ">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="AIRPORT_CODE" type="VARCHAR2(3)">
                <constraints nullable="false"/>
            </column>
            <column name="AIRPORT_NAME" type="VARCHAR2(200)">
                <constraints nullable="false"/>
            </column>
            <column name="CITY" type="VARCHAR2(200)">
                <constraints nullable="false"/>
            </column>
            <column name="AIRPORT_TIME_ZONE" type="VARCHAR2(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="Create index for airports code" author="Akhtar">
        <createIndex indexName="AIRPORT_CODE_INDEX" tableName="AIRPORTS">
            <column name="AIRPORT_CODE"/>
        </createIndex>
    </changeSet>

    <changeSet id="Load Airports data" author="Akhtar">
        <loadData tableName="AIRPORTS" file="static/csv/airport_time_zones.csv" >
            <column name="AIRPORT_CODE" header="AIRPORT_CODE" />
            <column name="AIRPORT_NAME" header="AIRPORT_NAME" />
            <column name="CITY" header="CITY" />
            <column name="AIRPORT_TIME_ZONE" header="AIRPORT_TIME_ZONE" />
        </loadData>
    </changeSet>
</databaseChangeLog>
